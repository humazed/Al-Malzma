<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/iTextView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="int"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/s1_Text_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iTextView"
        android:layout_toRightOf="@+id/iTextView"
        android:text="s1"
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/s2_Text_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/iTextView"
        android:layout_toEndOf="@+id/iTextView"
        android:layout_toRightOf="@+id/iTextView"
        android:text="s2"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/up_Text_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/s1_Text_view"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/s1_Text_view"
        android:background="#52ff12"
        android:text="+1"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/down_Text_view"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/s1_Text_view"
        android:layout_alignParentTop="@+id/up_Text_view"
        android:layout_alignRight="@+id/s1_Text_view"
        android:layout_below="@+id/up_Text_view"
        android:background="#ff312e"
        android:text="-1"
        android:textSize="25sp"/>

</RelativeLayout>